<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>HopÉir</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>project_alpha</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>com.googleusercontent.apps.919318565310-hli26m79lt113fhdkud5jbjo8o1obflm</string>
			</array>
		</dict>
	</array>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>FirebaseAppDelegateProxyEnabled</key>
	<false/>
	<key>LSApplicationQueriesSchemes</key>
	<array>
		<string>google</string>
	</array>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>NSFaceIDUsageDescription</key>
	<string>This app uses Face ID to sign in quickly and securely.</string>
	<key>NSLocalNetworkUsageDescription</key>
	<string>This app uses the local network for debugging and development purposes.</string>
	<key>NSUserNotificationUsageDescription</key>
	<string>This app uses notifications to alert you about ride updates like the start and end of your rides.</string>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
		<!-- ✅ Location permissions (Required for live ride tracking) -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>We need your location to enable live ride tracking.</string>

	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>We need your location to share live location during an ongoing ride.</string>


	<!-- ✅ iPhone + iPad support -->
	<key>UIDeviceFamily</key>
	<array>
		<integer>1</integer> <!-- iPhone -->
		<integer>2</integer> <!-- iPad -->
	</array>

	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UIStatusBarHidden</key>
	<false/>

	<!-- ✅ iPhone only portrait -->
	<key>UISupportedInterfaceOrientations~iphone</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
	</array>

	<!-- ✅ iPad must support all 4 for multitasking -->
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
</dict>
</plist>
